@model ErrorViewModel

@{
    ViewData["Title"] = "Request Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Raleway:500,800" rel="stylesheet">
</head>
    <body>

        @if (ViewBag.ErrorTitle == null)
        {
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-4 alert alert-warning">
                            <h2><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Error</h2>
                    </div>
                    <div class="col-lg-12">
                        <h4>An error ocurred while processing your request.</h4>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-4 alert alert-warning">
                            <h2><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> @ViewBag.ErrorTitle</h2>
                    </div>
                    <div class="col-lg-12">
                        <h4>@ViewBag.ErrorMessage</h4>
                    </div>
                </div>
            </div>
            <div class="container-xxl container-p-y d-flex justify-content-center">
                <div class="misc-wrapper justify-content-center">
                    <div class="mt-3 py-5">
                    <img src="~/images/archive/error.png"
                         alt="page-misc-error-light"
                         width="400"
                         class="img-fluid"/>
                    </div>
                </div>
            </div>
        }
    </body>
</html>

@*if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}*@


