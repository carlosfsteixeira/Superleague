@model IEnumerable<Superleague.Data.Entities.Statistics>

@{
    ViewData["Title"] = "Table";
}

<head>
    <link rel="stylesheet" href="~/css/statisticsIndex.css" />
</head>

<body id="page-top">

    <div class="container-fluid">

        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">League Table</h1>
        </div>

        <div class="row py-4">

            <div class="col-lg-12 col-md-4">
                <div class="container-fluid mb-4">

                    <table class="table styled-table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>

                                </th>
                                <th>
                                    Club
                                </th>
                                <th>
                                    Points
                                </th>
                                <th>
                                    Matches
                                </th>
                                <th>
                                    Wins
                                </th>
                                <th>
                                    Draws
                                </th>
                                <th>
                                    Losses
                                </th>
                                <th>
                                    Scored
                                </th>
                                <th>
                                    Conceeded
                                </th>
                                <th>
                                    More
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="padding-left: 10px; padding-top: 25px">
                                        @item.Position
                                    </td>
                                    <td>
                                        <img src="@Url.Content(item.Team.ImageURL)" alt="Image" style="width:50px; height:50px;" />
                                    </td>
                                    <td class="text-left" style="padding-top: 25px">
                                        @item.Team.Name
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.Points
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.TotalMatches
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.Wins
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.Draws
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.Losses
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.GoalsScored
                                    </td>
                                    <td style="padding-top: 25px">
                                        @item.GoalsConceded
                                    </td>
                                    <td style="padding-top: 25px">
                                        <a asp-controller="Team" asp-action="Details" asp-route-id="@item.Team.Id"><i class="fa-regular fa-eye"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>

        </div>

    </div>

</body>