@model IEnumerable<Superleague.Data.Entities.Statistics>

@{
    ViewData["Title"] = "Table";
}

<head>
    <link rel="stylesheet" href="~/css/statisticsIndex.css" />
</head>

<body id="page-top">

    <div class="container-fluid">

        @if (Model.Any())
        {
            <div class="d-sm-flex align-items-center justify-content-between mb-4 py-5">
                <h1 class="h5 mb-0 text-gray-800">Standings</h1>
            </div>

            <div class="row">

                <div class="col-lg-12 col-md-4" style="margin-top: -40px">
                    <div class="container-fluid mb-4">

                        <table class="table styled-table">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>

                                    </th>
                                    <th>

                                    </th>
                                    <th>
                                        PTS
                                    </th>
                                    <th>
                                        M
                                    </th>
                                    <th>
                                        W
                                    </th>
                                    <th>
                                        D
                                    </th>
                                    <th>
                                        L
                                    </th>
                                    <th>
                                        GS
                                    </th>
                                    <th>
                                        GC
                                    </th>
                                    <th>
                                        More
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="padding-left: 10px; padding-top: 25px">
                                            @item.Position
                                        </td>
                                        <td>
                                            <img src="@Url.Content(item.Team.ImageURL)" alt="Image" style="width:50px; height:50px;" />
                                        </td>
                                        <td class="text-left" style="padding-top: 25px">
                                            @item.Team.Name
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.Points
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.TotalMatches
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.Wins
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.Draws
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.Losses
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.GoalsScored
                                        </td>
                                        <td style="padding-top: 25px">
                                            @item.GoalsConceded
                                        </td>
                                        <td style="padding-top: 25px">
                                            <a asp-controller="Teams" asp-action="Details" asp-route-id="@item.Team.Id"><i class="fa-regular fa-eye"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        }
        else
        {
            <div class="container-xxl container-p-y d-flex justify-content-center">
                <div class="misc-wrapper justify-content-center py-5">

                    <h3 class="mb-2 mx-2 text-center">The Super League</h3>
                    <p class="mb-4 mx-2 text-center">No data available yet</p>
                    <div class="mt-3 py-5 text-center">
                        <img src="~/images/archive/error.png"
                         alt="page-misc-error-light"
                         width="400"
                         class="img-fluid" />
                    </div>
                </div>
            </div>
        }
        
    </div>

</body>