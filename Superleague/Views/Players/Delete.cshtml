@model Superleague.Data.Entities.Player

@{
    ViewData["Title"] = $"{Model.Name}";
}

<body>
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="container-fluid">

            <div class="d-sm-flex align-items-center justify-content-between">
                <h1 class="h3 mb-0 text-gray-800">Delete <i class="fa-solid fa-chevron-right"></i> @Model.Name</h1>
            </div>

            <h5 class="py-5">Are you sure you want to delete this player?</h5>

            <div class="row" style="margin-top: -35px;">

                <div class="col-lg-4">

                    <div class="card shadow border-left-danger mb-4">

                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-danger">Details</h6>
                        </div>

                        <div class="card-body">
                            <div class="row">

                                <div class="col-lg-5 col-md-4">
                                     <img src="@Model.ImageURL" style="width:150px; height:160px" class="mb-3 p-2" />
                                </div>
                                  
                                <div class="col-lg-6 col-md-4">

                                    <div class="col-lg-12 py-4">
                                        <h3>@Model.Name</h3>
                                    </div>

                                    <div class="col-lg-12">
                                        <h4><i class="fa-solid fa-shirt"></i> #@Model.Number</h4>
                                    </div>

                                </div>

                            </div>
                               
                        </div>

                        <div class="card-footer">
                            <div class="text-center">
                                <div class="form-group col-md-12">
                                    <input type="submit" class="btn btn-sm btn-danger float-right" value="Yes, Delete" />
                                    <a href="##" onClick="history.go(-1); return false;" class="btn btn-sm btn-outline-dark float-right mr-1">Cancel</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</body>


