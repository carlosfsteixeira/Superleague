@model IEnumerable<Superleague.Data.Entities.Match>

@{
    ViewData["Title"] = "Season Fixtures";
}

<head>
    <link rel="stylesheet" href="~/css/matchIndex.css" />
</head>

<body id="page-top">

    <div class="container-fluid">

        @if (Model.Any())
        {
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Season Fixtures</h1>
                <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Add New
                </a>
            </div>

            <div class="row py-4">

                <div class="col-lg-12 col-md-4">
                    <div class="container-fluid mb-4">

                        <div class="row">

                            <div class="col-md-12 py-3">
                                <div class="optionsDiv" style="color: black; font-weight: bold;">
                                    Filter By Round
                                    <select type="search" class="select-table-filter select" data-table="order-table">
                                        <option value="">Show All</option>
                                        <option value="Round 1">Round 1</option>
                                        <option value="Round 2">Round 2</option>
                                        <option value="Round 3">Round 3</option>
                                        <option value="Round 4">Round 4</option>
                                        <option value="Round 5">Round 5</option>
                                        <option value="Round 6">Round 6</option>
                                        <option value="Round 7">Round 7</option>
                                    </select>
                                </div>
                            </div>
              
                        </div>

                        <div class="row">
                            <div>
                                <table class="order-table styled-table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <b>Round</b>
                                            </th>
                                            <th>

                                            </th>
                                            <th>
                                                <b>Home Team</b>
                                            </th>
                                            <th>

                                            </th>
                                            <th class="text-right">
                                                <b>Away Team</b>
                                            </th>
                                            <th>

                                            </th>
                                            <th class="text-center">
                                                <b>Match Date</b>
                                            </th>
                                            <th class="text-center">
                                                <b>Venue</b>
                                            </th>
                                            <th>
                                                <b>Edit</b>
                                            </th>
                                            <th class="text-center">
                                                <b>Delete</b>
                                            </th>
                                            <th>
                                                <b>Add Result</b>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Round.Description
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.HomeTeam.ImageURL))
                                                    {
                                                        <img src="@Url.Content(item.HomeTeam.ImageURL)" alt="Image" style="max-height:auto; max-width:100%; width:50px; height:50px;" />
                                                    }
                                                </td>
                                                <td>
                                                    @item.HomeTeam.Name
                                                </td>
                                                <th>
                                                    vs
                                                </th>
                                                <td class="text-right">
                                                    @item.AwayTeam.Name
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.AwayTeam.ImageURL))
                                                    {
                                                        <img src="@Url.Content(item.AwayTeam.ImageURL)" alt="Image" style="max-height:auto; max-width:100%; width:50px; height:50px;" />
                                                    }
                                                </td>
                                                <td>
                                                    @item.MatchDate
                                                </td>
                                                <td>
                                                    @item.HomeTeam.Venue
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">
                                                        <i class="fa-solid fa-pen-to-square" style="color: dimgray"></i>
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <form asp-action="Delete" asp-route-id="@item.Id" id="form" method="post">
                                                        <button type="submit" class="btn" onclick="Delete(@item.Id)">
                                                            <i class="fa-regular fa-trash-can" style="color: red"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                                <td class="text-center">
                                                    <a asp-controller="Results" asp-action="Create" asp-route-id="@item.Id" class="btn btn-sm btn-success" data-toggle="tooltip" data-placement="bottom" title="Add Result">
                                                        Add Result
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

           


               
           
        }
        else
        {
            <div class="container-fluid d-flex justify-content-center py-5">
                <div class="row col-6">
                    <div class="col-md-12 py-3">
                        <div class="form-group col-md-12 py-1 text-center">
                            <h5 class="text-dark pl-3"><i class="fa-solid fa-circle-exclamation"></i> No fixtures yet</h5>
                        </div>
                        <hr />
                        <div class="form-group col-md-12 text-center">
                            <a asp-controller="Matches" asp-action="Create" class="btn btn-sm btn-success">
                                <i class="bi bi-circle-plus"></i> Add New
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</body>




@section Scripts {
    <script>
        function Delete(url) {
            event.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $('form').submit();
                    $.ajax({
                        url: url,
                        type: 'DELETE',
                        success: function (data) {
                            if (data.success) {
                                toastr.success(data.message);
                            }
                            else {
                                toastr.error(data.message);
                            }
                        }
                    })
                }
            })
        }
    </script>
    <script src="~/js/matchFilter.js"></script>
}
