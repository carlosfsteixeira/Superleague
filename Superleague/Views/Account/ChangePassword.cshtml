@model Superleague.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<body id="page-top">

    <form method="post" asp-action="ChangePassword" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="container-fluid">

            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h3 class="mb-0 text-gray-800">User Settings</h3>
            </div>

            <div class="row py-5">

                <div class="col-lg-4">

                    <div class="card shadow border-left-primary mb-4">

                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Change Password</h6>
                        </div>

                        <div class="card-body">
                            <div class="row justify-content-center">

                                <div class="col-md-9 col-lg-9 py-3 ">

                                    <div class="form-group col-md-12 py-1">
                                        <input asp-for="OldPassword" type="password" class="form-control" placeholder="Old Password"/>
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="text-center">
                                <div class="form-group col-md-12">
                                    <input type="submit" class="btn btn-sm btn-primary float-right" value="Confirm" />
                                    <a asp-action="ListUsers" class="btn btn-sm btn-outline-dark float-right mr-1">Cancel</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </form>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

