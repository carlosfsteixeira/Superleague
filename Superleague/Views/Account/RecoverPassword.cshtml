@model Superleague.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}


<body>

    <div class="container-fluid py-5">

        <div class="row">

            <div class="col-lg-12 col-md-10 mb-4">

                <h1 class="text-center"> <i class="fa-solid fa-lock"></i> </h1>

                <div class="text-center">
                    <h3>Forgot Password?</h3>
                </div>

                <div class="col-md-4 offset-md-4 py-2">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Recover" class="btn btn-sm btn-primary w-100" />
                        </div>
                    </form>
                    <div class="text-dark text-center">
                        <p>
                            <b>@ViewBag.Message</b>
                        </p>
                    </div>
                </div>

            </div>

        </div>

    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
