@model IEnumerable<Superleague.Data.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<style>
    .styled-table thead tr {
        background-color: black;
        color: #ffffff;
    }
</style>

<body id="page-top">

    <div class="container-fluid">

        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-gray-800 my-2">Users <i class="fa-solid fa-angle-right"></i> View All</h1>
        </div>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-dark">Users <i class="fa-solid fa-angle-right"></i> View All</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tableUsers" class="table styled-table table-striped" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Club</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.FirstName
                                    </td>
                                    <td>
                                        @item.LastName
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Role
                                    </td>
                                    <td>
                                        @if(item.Team == null)
                                        {
                                            <span class="badge badge-secondary">N/A</span>
                                        }
                                        else
                                        {
                                            @item.Team.Name
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts{
@*    <script src="~/js/users.js"></script>*@
    <script>
        $(document).ready(function () {
            $('#tableUsers').DataTable();
        });
    </script>
}

