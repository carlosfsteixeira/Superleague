@model IEnumerable<Superleague.Data.Entities.Position>

@{
    ViewData["Title"] = "Positions";
}

<style>
    .styled-table thead tr {
        background-color: black;
        color: #ffffff;
    }
</style>

<body id="page-top">

    <div class="container-fluid">

        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-gray-800 my-2">Management <i class="fa-solid fa-angle-right"></i> Positions <i class="fa-solid fa-angle-right"></i> View All</h1>
            <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Add New
            </a>
        </div>

        <div class="card shadow mb-4 py-3">
            <div class="card-header py-3">
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblPositions" class="table styled-table table-striped" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts{
    <script src="~/js/positions.js"></script>
}
